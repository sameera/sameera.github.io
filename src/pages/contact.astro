---
import IntroSection from "../components/IntroSection.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="lightbox-wrapper" id="about">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="lightbox-content">
                        <IntroSection
                            hidePersonality="true"
                            hideSectionHeading="true"
                            useQrBlock="true"
                        />
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>
